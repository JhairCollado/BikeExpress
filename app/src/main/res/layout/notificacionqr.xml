<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notificacionActivity">


    <TextView
        android:id="@+id/textoQ1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:autoLink="web"
        android:gravity="center"
        android:text="¡Disfruta tu viaje!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textColorLink="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/checkImg"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/checkImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="232dp"
        android:src="@drawable/check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center"
        android:text="¡Gracias por cuidar el planeta!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorLink="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/biciImg"
        tools:layout_editor_absoluteX="-15dp" />

    <ImageView
        android:id="@+id/biciImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="464dp"
        android:src="@drawable/bici"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>